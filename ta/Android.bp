rust_library_host {
    name: "libkmr_ta",
    crate_name: "kmr_ta",
    srcs: ["src/lib.rs"],
    edition: "2021",
    lints: "vendor",
    vendor_available: true,
    rustlibs: [
        "libciborium",
        "libciborium_io",
        "libder",
        "libflagset",
        "libkmr_common",
        "libkmr_wire",
        "liblog_rust",
        "libspki",
        "libx509_cert"
    ],
    proc_macros: [
        "libkmr_derive",
    ],
}

